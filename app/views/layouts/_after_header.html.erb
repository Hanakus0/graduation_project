        <li>
          <%= link_to "マイページ", users_profile_path(current_user.screen_name), class: "text-sm font-semibold leading-6 text-gray-900" %>
        </li>
        <li>
          <%= link_to "ブックマーク", posts_path, class: "text-sm font-semibold leading-6 text-gray-900" %>
        </li>
        <li>
          <%= link_to "フォロー", posts_path, class: "text-sm font-semibold leading-6 text-gray-900" %>
        </li>
        <li class="border-1 border-t-neutral-950"></li>
        <li class="mb-4">
            <%= link_to t('header.user_setting'), edit_user_registration_path, class: "text-sm font-semibold leading-6 text-gray-900" %>
        </li>
        <li class="mb-4">
            <%= link_to t('header.signout'), destroy_user_session_path, class: "text-sm font-semibold leading-6 text-gray-900" %>
        </li>
      </ul>
    </div>
  </div>
</div>

