<p style="color: green"><%= notice %></p>
<% content_for :title, "Posts" %>

<!-- Posts layouts -->
<!-- Open the modal using ID.showModal() method -->
<div class="flex justify-center h-14 m-2">
  <button class="btn btn-primary lg:w-1/3 fixed h-14" onclick="my_modal_2.showModal()">
    <span class="flex text-lg">
      投稿の検索をする
    </span>
    <%= image_tag './search_glass', class: "w-4 h-4" %>
  </button>
  <dialog id="my_modal_2" class="modal">
      <%= render "shared/search_posts" %>
    <form method="dialog" class="modal-backdrop">
      <button>close</button>
    </form>
  </dialog>
</div>

<!-- Posts layouts -->
<div class="px-6 mx-auto">
  <div class="w-full">
    <!-- Posts start -->
<%= turbo_frame_tag "posts-page-#{@posts.current_page}" do %>
  <%# 今のページで取得したTweet一覧 %>
  <%= render @posts %>

  <%# 遅延読み込みで次ページを取得する`<turbo-frame>` %>
  <%= turbo_frame_tag "posts-page-#{@posts.next_page}", loading: :lazy, src: path_to_next_page(@posts) %>
<% end %>
    <!-- Posts end -->
  </div>
</div>
  <!-- Posts layouts end -->


