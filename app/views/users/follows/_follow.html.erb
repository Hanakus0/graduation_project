<div class="mx-auto max-w-4xl px-10 my-2 py-6 bg-white rounded-lg shadow-md">
  <%= link_to (users_profile_path(followee.screen_name)), class: 'list-content', data: { turbo: false } do %>
    <div class="mt-2">
        <p class="mt-2 text-gray-600 truncate">
          <%= followee.introduction %>
        </p>
    </div>
    <div class="lg:flex justify-between items-center mt-4">
      <div class="m-4 flex items-center">
        <!-- icons -->
        <div class="flex mr-2 text-gray-700 text-sm mr-8">
          <span class="ml-2">
            投稿数
          </span>
          <span class="ml-2">
            <%= followee.posts.count %>
          </span>
        </div>
      </div>
      <div>
        <div class="flex">
            <%= image_tag followee.decorate.has_image?, class: "mx-4 w-10 h-10 object-cover border-2 border-slate-300 rounded-full sm:block" %>
          <div>
            <h1 class="text-gray-700 font-bold">
              <%= followee.account_name %>
            </h1>
            <h1 class="text-gray-400">
              ＠<%= followee.screen_name %>
            </h1>
          </div>
        </div>
      </div>
    </div>
  <% end %> 
</div>
