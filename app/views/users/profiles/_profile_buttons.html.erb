<!-- 自分以外はプロフィールの編集は不可 -->
<% if current_user == user %>
  <%= link_to edit_users_profile_path(current_user.user_uid) do %>
    <button class="flex items-center bg-blue-600 hover:bg-blue-700 text-gray-100 px-4 py-2 rounded text-sm space-x-2 transition duration-100">
        <%= image_tag 'setting.svg', class: "w-4 h-4" %>
        <span><%= t('profile.profile_edit') %></span>
    </button>
  <% end %>
<% else %>

  <%= link_to t('profile.unfollowing'), edit_users_profile_path(current_user.user_uid), class: "flex items-center bg-blue-600 hover:bg-blue-700 text-gray-100 px-4 py-2 rounded text-sm space-x-2 transition duration-100" %>

  <%= link_to  class: "flex items-center bg-blue-600 hover:bg-blue-700 text-gray-100 px-4 py-2 rounded text-sm space-x-2 transition duration-100" do %>
      <span><%= t('profile.unfollowing') %></span>
  <% end %>
<% end %>
